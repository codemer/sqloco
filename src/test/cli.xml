<cloxx> 
	<!--    This is the command line generation file for use with clo++
			You must have clo++ installed to generate the command line
			parsing source code.
	-->
	<progname name="testx">
		<description>
			<para>  
				SQLoco test program.
			</para>
		</description>
	</progname>
	<config>
		<autohelp/>
	</config>
	<options>
		<option id="username" type="string">
			<name>username</name>
			<name>u</name>
			<comment>Specify the username (required)</comment>
		</option>
		<option id="password" type="string">
			<name>password</name>
			<name>p</name>
			<comment>Specify the password (required)</comment>
		</option>
		<option id="database" type="string" default="_test">
			<name>database</name>
			<name>d</name>
			<comment>Override default database of "test"</comment>
		</option>
		<option id="host" type="string">
			<name>host</name>
			<name>h</name>
			<comment>Override default host of "localhost"</comment>
		</option>
		<option id="port" type="string">
			<name>port</name>
			<comment>Override default port</comment>
		</option>
	</options>
</cloxx>

